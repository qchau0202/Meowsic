<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/library_item_border"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/queue_art"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/meowsic_black_icon"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CircularImageView" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/queue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Song Title"
            android:textColor="@color/primary_black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/queue_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Artist â€¢ 3:45"
            android:textColor="@color/primary_grey"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/queue_more"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more_vertical_24px"
        android:contentDescription="More"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        app:tint="@color/primary_black" />

</LinearLayout>


