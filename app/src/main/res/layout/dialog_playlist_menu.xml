<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Playlist Options"
        android:textColor="@color/primary_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Add Songs Option -->
    <LinearLayout
        android:id="@+id/option_add_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add_24px"
            app:tint="@color/primary_black"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Songs"
            android:textColor="@color/primary_black"
            android:background="@android:color/transparent"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Remove Songs Option -->
    <LinearLayout
        android:id="@+id/option_remove_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_playlist_remove_24px"
            app:tint="@color/primary_black"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remove Songs"
            android:textColor="@color/primary_black"
            android:background="@android:color/transparent"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>

