<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_white"
    android:layout_margin="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/btn_back_queue"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_left_24px"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/primary_black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Queue"
            android:textColor="@color/primary_black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <View
            android:layout_width="28dp"
            android:layout_height="28dp"/>
    </LinearLayout>

    <!-- Now Playing Card -->
    <LinearLayout
        android:id="@+id/now_playing_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_shadow_bg"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/np_art"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/billie_eilish"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CircularImageView" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/card_shadow_bg">

            <TextView
                android:id="@+id/np_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textColor="@color/primary_black"
                android:background="@color/card_shadow_bg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:background="@color/card_shadow_bg">

                <TextView
                    android:id="@+id/np_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/primary_grey"
                    android:background="@color/card_shadow_bg"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"/>

                <SeekBar
                    android:id="@+id/np_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="1000"
                    android:progress="0"
                    android:progressTint="@color/primary_pink"
                    android:thumbTint="@color/primary_pink"
                    android:background="@color/card_shadow_bg"
                    android:splitTrack="false" />

                <TextView
                    android:id="@+id/np_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/primary_grey"
                    android:background="@color/card_shadow_bg"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
        
        <ImageView
            android:id="@+id/np_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_pause_circle_24px"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/primary_pink"/>
    </LinearLayout>

    <!-- Up Next header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up Next"
        android:textColor="@color/primary_black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <!-- Empty state message -->
    <TextView
        android:id="@+id/queue_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No songs in queue"
        android:textColor="@color/primary_grey"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"/>

    <!-- Queue list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewQueue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="true"/>

</LinearLayout>