<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/minimized_player"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/card_shadow_bg"
    android:elevation="8dp"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:visibility="gone">

    <!-- Album Art -->
    <ImageView
        android:id="@+id/mini_album_art"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/billie_eilish"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CircularImageView" />

    <!-- Song Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/card_shadow_bg">

        <TextView
            android:id="@+id/mini_song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textColor="@color/primary_black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/card_shadow_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:background="@color/card_shadow_bg">

            <TextView
                android:id="@+id/mini_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/primary_grey"
                android:textSize="12sp"
                android:background="@color/card_shadow_bg"/>

            <SeekBar
                android:id="@+id/mini_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="1000"
                android:progress="0"
                android:progressTint="@color/primary_pink"
                android:thumbTint="@color/primary_pink"
                android:splitTrack="false" />

            <TextView
                android:id="@+id/mini_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/primary_grey"
                android:textSize="12sp"
                android:background="@color/card_shadow_bg"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Play Controls -->
    <ImageView
        android:id="@+id/mini_play_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_pause_circle_24px"
        android:contentDescription="Play/Pause"
        android:background="@android:color/transparent"
        app:tint="@color/primary_pink"
        />

</LinearLayout>
