<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp">
    <!-- Create Playlist Option -->
    <LinearLayout
        android:id="@+id/option_create_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_playlist_add_24px"
            android:contentDescription="Create Playlist"
            app:tint="@color/primary_black"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create a playlist"
            android:textColor="@color/primary_black"
            android:background="@android:color/transparent"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Import Music Option -->
    <LinearLayout
        android:id="@+id/option_import_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_music_note_24px"
            android:contentDescription="Import Music"
            app:tint="@color/primary_black"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Import music from files"
            android:textColor="@color/primary_black"
            android:background="@android:color/transparent"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Remove Items Option -->
    <LinearLayout
        android:id="@+id/option_remove_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_playlist_remove_24px"
            android:contentDescription="Remove Items"
            app:tint="@color/primary_black"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remove items"
            android:textColor="@color/primary_black"
            android:background="@android:color/transparent"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>