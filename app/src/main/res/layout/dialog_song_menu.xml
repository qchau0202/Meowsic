<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="0dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Song Options"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_black"
        android:padding="20dp"
        android:paddingBottom="12dp"
        android:gravity="center" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_grey"
        android:alpha="0.2" />

    <!-- Add to Playlist Option -->
    <LinearLayout
        android:id="@+id/option_add_to_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add to Playlist"
            android:textSize="16sp"
            android:textColor="@color/primary_black" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_grey"
        android:alpha="0.2"
        android:layout_marginStart="16dp" />

    <!-- Play Next Option -->
    <LinearLayout
        android:id="@+id/option_play_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Play Next"
            android:textSize="16sp"
            android:textColor="@color/primary_black" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_grey"
        android:alpha="0.2"
        android:layout_marginStart="16dp" />

    <!-- Add to Queue Option -->
    <LinearLayout
        android:id="@+id/option_add_to_queue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add to Queue"
            android:textSize="16sp"
            android:textColor="@color/primary_black" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_grey"
        android:alpha="0.2"
        android:layout_marginStart="16dp" />

    <!-- Remove Option -->
    <LinearLayout
        android:id="@+id/option_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remove"
            android:textSize="16sp"
            android:textColor="@color/primary_black" />
    </LinearLayout>

</LinearLayout>

