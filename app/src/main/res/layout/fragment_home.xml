<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Title and Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Welcome back,"
                android:textColor="@color/primary_black"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/btn_add_home"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chou"
                android:textColor="@color/primary_black"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Search Fragment Container -->
        <FrameLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Category Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:baselineAligned="false">

                <!-- Get Chill Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/card_bg_pink"
                    android:padding="16dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top 100 cat songs"
                        android:background="@color/primary_pink"
                        android:textColor="@color/primary_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Let's Dance Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/card_bg_blue"
                    android:padding="16dp"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meowsic newest album"
                        android:background="@color/primary_blue"
                        android:textColor="@color/primary_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        <!-- New Collection Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Collections"
                android:textColor="@color/primary_black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Horizontal ScrollView for Collection Items -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Collection Item 1 -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_shadow_bg"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/billie_eilish"
                            android:contentDescription="Album Art"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meowsic Hits"
                            android:textColor="@color/primary_black"
                            android:background="@color/card_shadow_bg"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Various Artists"
                            android:background="@color/card_shadow_bg"
                            android:textColor="@color/primary_grey"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Collection Item 2 -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_shadow_bg"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/cat_profile"
                            android:contentDescription="Album Art"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cat Vibes"
                            android:background="@color/card_shadow_bg"
                            android:textColor="@color/primary_black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feline Artists"
                            android:background="@color/card_shadow_bg"
                            android:textColor="@color/primary_grey"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Collection Item 3 -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_shadow_bg"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/login_illustration"
                            android:contentDescription="Album Art"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Melody Mix"
                            android:background="@color/card_shadow_bg"
                            android:textColor="@color/primary_black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Music Producers"
                            android:background="@color/card_shadow_bg"
                            android:textColor="@color/primary_grey"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Collection Item 4 -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_shadow_bg"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/meowsic_black_icon"
                            android:contentDescription="Album Art"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Purr-fect Beats"
                            android:background="@color/card_shadow_bg"
                            android:textColor="@color/primary_black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DJ Meowsic"
                            android:background="@color/card_shadow_bg"
                            android:textColor="@color/primary_grey"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
