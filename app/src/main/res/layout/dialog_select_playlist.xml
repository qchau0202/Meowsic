<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="0dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Playlist"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_black"
        android:padding="20dp"
        android:paddingBottom="12dp"
        android:gravity="center" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_grey"
        android:alpha="0.2" />

    <!-- Playlist List (ScrollView for many playlists) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp">

        <LinearLayout
            android:id="@+id/playlist_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Empty state -->
    <TextView
        android:id="@+id/no_playlists_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No playlists available.\nCreate one in the Library."
        android:textSize="14sp"
        android:textColor="@color/primary_grey"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

</LinearLayout>

