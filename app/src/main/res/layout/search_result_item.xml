<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/search_result_item_background"
    android:padding="12dp"
    >

    <ImageView
        android:id="@+id/result_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_library_music_24px"
        android:background="@android:color/transparent"
        android:contentDescription="Result"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Result"
            android:background="@android:color/transparent"
            android:textColor="@color/primary_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artists, Playlists, Albums"
            android:background="@android:color/transparent"
            android:textColor="@color/primary_grey"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
