<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/search_result_item_background"
    android:padding="12dp">

    <ImageView
        android:id="@+id/result_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_library"
        android:contentDescription="Result"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Result"
            android:textColor="@color/primary_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist or Album"
            android:textColor="@color/primary_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_library"
        android:contentDescription="Play"
        android:tint="@color/primary_pink" />
</LinearLayout>
